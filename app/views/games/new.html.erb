<h1>New Game</h1>
<div <% @letter.each do |element| %>>
<button type="button" class="btn btn-primary"> <%= element %> </button>
<% end %>
<p>What is the longest word you can find?</p>
<form class="form-inline" action="/score" method="post">
  <div class="form-group mb-2">
    <label for="staticEmail2" class="sr-only">Email</label>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <label for="inputPassword2" class="sr-only">Password</label>
      <input type="text" class="form-control" name="question">
  </div>
  <button type="submit" class="btn btn-primary mb-2">Play</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
